# Docker Compose Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT COMMIT .env file to git

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Service Configuration
EMAIL_FROM=no-reply@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Push Service Configuration
# Option 1: Use JSON string (recommended for Docker)
FIREBASE_SERVICE_ACCOUNT_JSON={\
type\:\service_account\,\project_id\:\your-project\}
# Option 2: Use file path (alternative)
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json
FIREBASE_PROJECT_ID=your-project-id

# Service URLs (if running separately)
USER_SERVICE_URL=http://user-server:4001/api/v1
TEMPLATE_SERVICE_URL=http://template-server:4003/api/v1
